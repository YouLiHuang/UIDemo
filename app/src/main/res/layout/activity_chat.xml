<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chat_activity_main_layout">

    <RelativeLayout
        android:id="@+id/Top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/top_back"
            android:layout_width="17sp"
            android:layout_height="17sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5sp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/title_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三乔数据库"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/chat_clear"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chat_clear"/>

    </RelativeLayout>
    <View
        android:id="@+id/Top_line"
        android:layout_below="@+id/Top_title"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="1sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_below="@+id/Top_line"
        android:layout_above="@+id/chat_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:scrollbars="vertical"
        android:background="@drawable/file_dir_background"/>

    <com.example.sanqiao.util.CirclePgBar
        android:id="@+id/pgBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/chat_bottom_layout"
        android:layout_marginBottom="240sp" />

    <LinearLayout
        android:id="@+id/chat_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#eeeeee">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <FrameLayout
                android:id="@+id/chat_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonSend"
                android:layout_gravity="center"
                android:layout_margin="2sp"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="12sp"
                android:background="@drawable/chat_send_button_selector"
                android:text="Send" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
